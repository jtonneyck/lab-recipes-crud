<section class="list">
    {{#each recipes}}
    <article class="list-item">
        <div>
            <a href="/recipes/detail/{{this._id}}"><img src={{this.image}} alt='image'></a>
        </div>
        <div>
            <h2>{{this.title}}</h2>
            <h6>{{this.cuisine}}</h6>
            <a href="/recipes/detail/{{this._id}}">More</a>
        </div>
        <div class="delete-link">
            <a href="/recipes/update/{{this._id}}">Update</a>
            <a href="/recipes/delete/{{this._id}}">Delete</a>
        </div>
    </article>
    {{/each}}
</section>