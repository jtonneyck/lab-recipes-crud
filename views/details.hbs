{{#each recipes}}
    <h1>{{title}}</h1>
    <img src="{{image}}" alt="">
    <h3>{{ingredients}}</h3>
    <h3>{{cuisine}}</h3>
    <h3>{{level}}</h3>
    <h3>{{duration}}</h3>
    <h3>{{dishType}}</h3>
    <h3>{{creator}}</h3>
    <h3>{{created}}</h3>
{{/each}}

<a href="/recipes/delete/?id={{recipes._id}}"><button>Delete this recipe</button></a>
<a href="/recipes/details/edit/?id={{recipes._id}}" class="edit-button">EDIT</a>