<div class="container">
  <div class="row row-cols-1 row-cols-md-2">
    {{#each allRecipes}}
    <div class="col mb-4">
      <div class="card">
        <a href="/recipes/{{id}}">
          <img src="{{image}}" class="card-img-top" alt="Recipe">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{cuisine}}</p>
          </div>
        </a>
      </div>
    </div>
    {{/each}}
  </div>
</div>