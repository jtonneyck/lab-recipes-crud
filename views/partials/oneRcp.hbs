<div class="details-container">    
    <div class="details-header">
         <h2 class="details-title">{{recipe.title}}</h2>
        <img src="{{recipe.image}}" alt="" style="width:400px">
    </div>

    <div class="details-text-container">        
       <p class="details-text">Difficulty level: {{recipe.level}}</p>
       <p class="details-text">Ingredients: {{recipe.ingredients}}</p>
       <p class="details-text">Cuisine: {{recipe.cuisine}}</p>
       <p class="details-text">Type of dish: {{recipe.dishType}}</p>   
       <p class="details-text">Duration: {{recipe.duration}}</p>
       <p class="details-text">Creator: {{recipe.creator}}</p>
    </div>
</div>
<form action='/update/{{recipe.id}}' method="GET">
<input type="submit" value="Edit">
</form>